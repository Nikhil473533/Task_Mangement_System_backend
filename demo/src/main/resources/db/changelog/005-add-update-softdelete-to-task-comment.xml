<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
               xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="
                http://www.liquibase.org/xml/ns/dbchangelog
                https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">
   <changeSet id="005-add-update-softdelete-to-task-comment" author="njoglekar">
   
 <addColumn tableName="task_comment">
          <column name="updated_at" type="DATETIME2"/>
          
          <column name="updated_by" type="VARCHAR(50)"/>
          
          <column name="deleted" type="BIT" defaultValueBoolean = "false">
            <constraints nullable="false"/>
          </column>
          
      </addColumn>
      
       <rollback>
      <dropColumn tableName="task_comment" columnName="updated_at"/>
      <dropColumn tableName="task_comment" columnName="updated_by"/>
      <dropColumn tableName="task_comment" columnName="deleted"/>
   </rollback>
   </changeSet>
</databaseChangeLog>  